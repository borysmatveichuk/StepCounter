<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_graph"
        app:startDestination="@id/mainFragment">
    <fragment
            android:id="@+id/mainFragment"
            android:name="net.borkiss.stepcounter.ui.main.MainFragment"
            android:label="@string/app_name"
            tools:layout="@layout/main_fragment" >
        <action
                android:id="@+id/action_mainFragment_to_statFragment"
                app:destination="@id/statFragment" />
    </fragment>
    <fragment
            android:id="@+id/statFragment"
            android:name="net.borkiss.stepcounter.ui.stat.StatFragment"
            android:label="@string/Statistics"
            tools:layout="@layout/stat_fragment" />
</navigation>